<%= form_with(model: document_register, local: true, class: 'form-horizontal') do |form| %>
      <div class="form-group <%= document_register.errors[:name].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control' %>
        <% if document_register.errors[:name].any? %>
          <span class="help-block m-b-none font-bold"><%= document_register.errors[:name].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= document_register.errors[:instrument_registrations_id].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Instrument registrations</label>
      <div class="col-sm-10">
        <%= form.text_field :instrument_registrations_id, class: 'form-control' %>
        <% if document_register.errors[:instrument_registrations_id].any? %>
          <span class="help-block m-b-none font-bold"><%= document_register.errors[:instrument_registrations_id].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= document_register.errors[:document_file].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Document file</label>
      <div class="col-sm-10">
        <%= form.text_field :document_file, class: 'form-control' %>
        <% if document_register.errors[:document_file].any? %>
          <span class="help-block m-b-none font-bold"><%= document_register.errors[:document_file].first %></span>
        <% end %>
      </div>
    </div>    
    <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Cancelar', document_registers_path, :class => 'btn btn-white' %>     
        <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>